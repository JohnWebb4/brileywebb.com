{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "es2015",
    "moduleResolution": "node",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@locales/*": ["src/locales/*"],
      "@screens/*": ["src/screens/*"],
      "@src/*": ["src/*"],
      "@typings/*": ["typings/*"],
    },
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "typings/*.*",
    "src/*.ts",
    "src/*/*.ts",
  ],
}